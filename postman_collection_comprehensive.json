  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global Pre-request Setup",
          "",
          "// Add tenant header for authenticated requests",
          "if (pm.collectionVariables.get('tenantId') && !pm.request.headers.has('x-tenant-id')) {",
          "    pm.request.headers.add({",
          "        key: 'x-tenant-id',",
          "        value: pm.collectionVariables.get('tenantId')",
          "    });",
          "}",
          "",
          "// Add authorization header for protected endpoints",
          "const protectedPaths = ['/users', '/roles', '/permissions', '/projects', '/notifications', '/invitations', '/tenant-management'];",
          "const isProtectedEndpoint = protectedPaths.some(path => pm.request.url.toString().includes(path));",
          "const isAuthEndpoint = pm.request.url.toString().includes('/auth/');",
          "const isHealthEndpoint = pm.request.url.toString().includes('/health');",
          "",
          "if (isProtectedEndpoint && !isAuthEndpoint && !isHealthEndpoint) {",
          "    const accessToken = pm.collectionVariables.get('accessToken');",
          "    if (accessToken && !pm.request.headers.has('Authorization')) {",
          "        pm.request.headers.add({",
          "            key: 'Authorization',",
          "            value: `Bearer ${accessToken}`",
          "        });",
          "    }",
          "}",
          "",
          "// Add common headers",
          "pm.request.headers.add({",
          "    key: 'User-Agent',",
          "    value: 'Postman-Collection/3.0.0'",
          "});",
          "",
          "if (!pm.request.headers.has('Accept') && !isHealthEndpoint) {",
          "    pm.request.headers.add({",
          "        key: 'Accept',",
          "        value: 'application/json'",
          "    });",
          "}",
          "",
          "// Log request",
          "console.log(`ðŸš€ ${pm.request.method} ${pm.request.url.toString().split('/').pop()}`);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global Test Suite",
          "",
          "pm.test('Response status code is valid', function () {",
          "    pm.expect(pm.response.code).to.be.within(100, 599);",
          "});",
          "",
          "pm.test('Response time is acceptable', function () {",
          "    let maxTime = 5000;",
          "    if (pm.request.url.toString().includes('/health')) maxTime = 2000;",
          "    else if (pm.request.url.toString().includes('/auth/')) maxTime = 3000;",
          "    else if (pm.request.method === 'GET') maxTime = 2000;",
          "    pm.expect(pm.response.responseTime).to.be.below(maxTime);",
          "});",
          "",
          "// Auto-capture environment variables",
          "if (pm.response.code >= 200 && pm.response.code < 300 && pm.response.headers.get('Content-Type')?.includes('application/json')) {",
          "    const responseJson = pm.response.json();",
          "    const requestUrl = pm.request.url.toString();",
          "    ",
          "    // Capture authentication tokens",
          "    if (responseJson.accessToken) {",
          "        pm.collectionVariables.set('accessToken', responseJson.accessToken);",
          "        console.log('ðŸ”‘ Access token captured');",
          "        ",
          "        if (responseJson.user) {",
          "            pm.collectionVariables.set('userId', responseJson.user.id);",
          "            if (responseJson.user.tenantId) {",
          "                pm.collectionVariables.set('tenantId', responseJson.user.tenantId);",
          "                console.log(`ðŸ¢ Tenant ID captured: ${responseJson.user.tenantId}`);",
          "            }",
          "        }",
          "    }",
          "    ",
          "    // Capture resource IDs from creation endpoints",
          "    if (pm.request.method === 'POST' && responseJson.id) {",
          "        if (requestUrl.includes('/tenants')) {",
          "            pm.collectionVariables.set('tenantId', responseJson.id);",
          "            console.log(`ðŸ¢ Tenant ID captured: ${responseJson.id}`);",
          "        } else if (requestUrl.includes('/users')) {",
          "            pm.collectionVariables.set('userId', responseJson.id);",
          "        } else if (requestUrl.includes('/roles')) {",
          "            pm.collectionVariables.set('roleId', responseJson.id);",
          "        } else if (requestUrl.includes('/permissions')) {",
          "            pm.collectionVariables.set('permissionId', responseJson.id);",
          "        } else if (requestUrl.includes('/projects')) {",
          "            pm.collectionVariables.set('projectId', responseJson.id);",
          "        } else if (requestUrl.includes('/notifications')) {",
          "            pm.collectionVariables.set('notificationId', responseJson.id);",
          "        } else if (requestUrl.includes('/invitations')) {",
          "            pm.collectionVariables.set('invitationId', responseJson.id);",
          "            if (responseJson.token) {",
          "                pm.collectionVariables.set('invitationToken', responseJson.token);",
          "                console.log('ðŸŽ« Invitation token captured');",
          "            }",
          "        }",
          "    }",
          "    ",
          "    // Capture tenant creation results",
          "    if (requestUrl.includes('/tenant-management/create') && responseJson.tenant) {",
          "        pm.collectionVariables.set('tenantId', responseJson.tenant.id);",
          "        pm.collectionVariables.set('accessToken', responseJson.accessToken);",
          "        console.log(`ðŸ¢ New tenant created: ${responseJson.tenant.id}`);",
          "    }",
          "}",
          "",
          "// Log response",
          "console.log(`ðŸ“Š ${pm.response.status} (${pm.response.code}) in ${pm.response.responseTime}ms`);"
        ]
      }
    }
  ],
